# Kawane Studio Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# API Configuration
NEXT_PUBLIC_API_URL="https://kawane-be.vercel.app/api"

# App Configuration
NEXT_PUBLIC_APP_NAME="Kawane Studio"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_DESCRIPTION="Fashion e-commerce platform"

# Google OAuth Configuration (Optional)
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your-google-client-id"

# Cloudinary Configuration (for image uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
NEXT_PUBLIC_CLOUDINARY_API_KEY="your-cloudinary-api-key"

# Payment Configuration (Optional - for future integrations)
# NEXT_PUBLIC_XENDIT_PUBLIC_KEY="your-xendit-public-key"
# NEXT_PUBLIC_MIDTRANS_CLIENT_KEY="your-midtrans-client-key"

# WhatsApp Configuration
NEXT_PUBLIC_WHATSAPP_PHONE_NUMBER="+6281234567890"
NEXT_PUBLIC_WHATSAPP_BUSINESS_NAME="Kawane Studio"

# Analytics Configuration (Optional)
# NEXT_PUBLIC_GA_TRACKING_ID="your-google-analytics-tracking-id"
# NEXT_PUBLIC_FB_PIXEL_ID="your-facebook-pixel-id"

# Social Media Configuration
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/kawanestudio"
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/kawanestudio"
NEXT_PUBLIC_TWITTER_URL="https://twitter.com/kawanestudio"
NEXT_PUBLIC_TIKTOK_URL="https://tiktok.com/@kawanestudio"

# Instagram API Configuration (for real Instagram feed)
# Get these from Facebook Developer Console -> Instagram Basic Display
NEXT_PUBLIC_INSTAGRAM_ACCESS_TOKEN="your-instagram-access-token"
NEXT_PUBLIC_INSTAGRAM_APP_ID="your-instagram-app-id"
NEXT_PUBLIC_INSTAGRAM_APP_SECRET="your-instagram-app-secret"

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL="info@kawanestudio.com"
NEXT_PUBLIC_CONTACT_PHONE="+6281234567890"
NEXT_PUBLIC_CONTACT_ADDRESS="Jakarta, Indonesia"

# Business Information
NEXT_PUBLIC_BUSINESS_NAME="Kawane Studio"
NEXT_PUBLIC_BUSINESS_DESCRIPTION="Premium fashion and lifestyle brand"
NEXT_PUBLIC_BUSINESS_LOGO="/logo-hitam.png"

# Feature Flags
NEXT_PUBLIC_ENABLE_WHATSAPP_CHECKOUT=true
NEXT_PUBLIC_ENABLE_WISHLIST=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Development Configuration
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_VERBOSE_LOGGING=false

# Production Configuration (uncomment for production)
# NEXT_PUBLIC_API_URL="https://api.kawanestudio.com"
# NEXT_PUBLIC_API_BASE_URL="https://api.kawanestudio.com/api"
# NEXT_PUBLIC_APP_URL="https://www.kawanestudio.com"
# NEXT_PUBLIC_DEBUG_MODE=false
# NEXT_PUBLIC_VERBOSE_LOGGING=false


